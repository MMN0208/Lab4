#ifndef INC_TASK_H_
#define INC_TASK_H_

typedef struct {
	void (* pTask)(void);

	uint32_t Delay;

	uint32_t Period;

	uint8_t RunMe;

	uint8_t Task_ID;
} Task;

Task newTask(void);
Task newTask(void (* pFunction)(void), uint32_t DELAY, uint32_t PERIOD);

typedef struct {
	Task data;

	TaskNode * next;
} TaskNode;

#endif /* INC_TASK_H_ */
