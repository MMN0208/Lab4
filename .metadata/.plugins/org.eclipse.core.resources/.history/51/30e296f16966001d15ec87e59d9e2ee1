#ifndef INC_TASK_H_
#define INC_TASK_H_

typedef struct {
	void (* pTask)(void) = NULL;

	// Delay (ticks) until the function will (next) be run
	uint32_t Delay = 0;

	// Interval (ticks) between subsequent runs
	uint32_t Period = 0;

	// Incremented (by scheduler) when task i s due to execute
	uint8_t RunMe = 0;

	uint8_t Task_ID;
} Task;

typedef struct {
	Task data;

	TaskNode * next = NULL;
} TaskNode;

#endif /* INC_TASK_H_ */
